page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.user-item{margin:16rpx;border-radius:10px;overflow:hidden;box-shadow:0 0 10px rgba(0, 0, 0,.3);}
.user-picture-wrap{position:relative;z-index:1;}
.user-picture{width:100%;vertical-align:top;height:300rpx;}
.icon-pictures{position:absolute;top:5px;right:5px;}
.user-info{background-color:#fff;line-height:60rpx;padding:0 16rpx;font-size:24rpx;}
.user-boy{background-color:#d0f0ff;}
.user-girl{background-color:#ffd0f7;}
.btn-add{position:fixed;font-size:30rpx;line-height:40rpx;padding-top:20rpx;box-sizing:border-box;text-align:center;z-index:9;bottom:50px;right:16rpx;width:120rpx;height:120rpx;background:#03a9f4;color:#fff;border-radius:50%;box-shadow:0 0 10px rgba(255, 255, 255,.5);}